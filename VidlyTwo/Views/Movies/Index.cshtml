@model IEnumerable<VidlyTwo.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<a class="btn btn-primary" role="button" href="~/Movies/New" >New Movie</a><br /><br /><br />

@if (Model.Equals(null))
{
    <h3> We don't have movies yet.</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <tr><th>Movie</th><th>Genre </th></tr>


        @foreach (var movie in Model)
        {
            <tr><td>@Html.ActionLink(movie.Name, "edit", "Movies", new { id = movie.Id }, null)</td><td>@movie.Genre.GenreType</td></tr>
        }
    </table>

}
